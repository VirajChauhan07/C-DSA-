    fibonacci series
    int n=10;
    int a=0;
    int b=1;
    cout<<a<<" "<<b<<" ";
    for(int i=1; i<=n;i++){
        int sum =a+b;
        cout<<sum<<" ";
        a=b;
        b=sum;
    }

    Prime Number
    int n;
    cout<<"enter any number:";
    cin>>n;
    bool isPrime=1;
    for(int i=2;i<=(n-1);i++){
        if(n%i==0){
            isPrime=0;
            break;
        }       
    }
    if(isPrime==0){
        cout<<"Not a Prime"<<endl;
    }
    else{
        cout<<"Prime"<<endl;
    }

